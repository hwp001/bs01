<form bindsubmit="submitForm">
    <view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
        <view class="page__bd">
            <view class="weui-cells__title">性别</view>
            <view class="weui-cells weui-cells_after-title">
                <radio-group bindchange="radioChange" name="sex" >
                    <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                        <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
                        <view class="weui-cell__bd">{{item.name}}</view>
                        <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                            <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                        </view>
                    </label>
                </radio-group>
            </view>
            <view class="weui-cells__title">表单</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">姓名</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="name" class="weui-input" placeholder="请输入姓名" />
                    </view>
                </view>
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">手机号</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="phone" class="weui-input" placeholder="请输入手机号"  />
                    </view>
                </view>
            </view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_switch">
                    <view class="weui-cell__bd">设为默认</view>
                    <view class="weui-cell__ft">
                        <switch name="sort" checked="{{switch2Checked}}" bindchange="switch2Change" />
                    </view>
                </view>
            </view>
            <view class="weui-cells__title">
                详细地址
                <view class="icon_success" bind:tap="chooseLocation">
                    <icon type="success" size="26"></icon>
                </view>
            </view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea name="address" class="weui-textarea" value="{{address}}" placeholder="请输入详细地址" style="height: 3.3em"  required />
                    </view>
                </view>
            </view>
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" formType="submit">确定</button>
            </view>
        </view>
    </view>
</form>